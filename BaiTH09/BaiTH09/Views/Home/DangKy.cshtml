@model BaiTH09.Models.KhachHang
@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center" style="background-color: #1D50A2; color: white;">
                    <h3 class="mb-0">ĐĂNG KÝ THÀNH VIÊN</h3>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("DangKy", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            <label class="form-label">Họ tên khách hàng:</label>
                            @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập:</label>
                            @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mật khẩu:</label>
                            @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mật khẩu nhập lại:</label>
                            <input type="password" id="MatKhauNhapLai" name="MatKhauNhapLai" class="form-control" required />
                            @Html.ValidationMessage("MatKhauNhapLai", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Email không được bỏ trống</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ:</label>
                            @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Điện thoại:</label>
                            @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}